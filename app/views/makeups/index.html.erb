<p id="notice"><%= notice %></p>

<h1>Makeup Review</h1>
<%= image_tag 'makeup.jfif' , width: '100', height: '100' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Colour</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makeups.each do |makeup| %>
      <tr>
        <td><%= image_tag game.picture.url(:thumb) %></td>
        <td><%= makeup.name %></td>
        <td><%= makeup.colour %></td>
        <td><%= makeup.rating %></td>
        <td><%= link_to 'Show', makeup %></td>
        <td><%= link_to 'Edit', edit_makeup_path(makeup) %></td>
        <td><%= link_to 'Destroy', makeup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Makeup', new_makeup_path %>
